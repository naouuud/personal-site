---
import MainNav from '../components/MainNav.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="font-sans text-lg" style="width: 100vw;" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Serif:ital@0;1&family=Zilla+Slab:ital@0;1&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>Personal Site: {title}</title>
	</head>
	<body>
		<MainNav />
		<slot />
	</body>
</html>